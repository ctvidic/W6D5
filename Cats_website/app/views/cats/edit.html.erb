
<h1> Add Cats </h1>

<form action = "/cats" method="POST">
    <input type="hidden" name = "_method" value = "patch">
    <label for="Birthday">cat.birth_date</label>
    <input id="Birthday" type="date" name="cat[birth_day]">
    <br>
    <label for="Name">Name </label>
    <input id="Name" type="text" name="cat[name]">
    <br>
    <label for="Color">Color </label>
    <select id="Color" name="cat[color]">
        <option disabled selected>-- Please Select --</option>
        <option value="orange">Orange</option>
        <option value="black">Black</option>
        <option value="grey">Grey</option>
        <option value="brown">Brown</option>
    </select>
    <br>
    <p>Sex</p>
    <input name = "S"  type="radio" id = "M" value = "M"> 
    <label for="M">M</label>
    <input name = "S" type="radio" id = "F" value = "F"> 
    <label for="F">F</label>
    <br>
    <label for="Description">Description</label>
    <textarea name="cat[description]">Type here</textarea>
    <input type="submit" value="Add new Cat">
</form>